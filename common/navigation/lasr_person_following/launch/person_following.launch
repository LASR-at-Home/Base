<launch>

 <include file="$(find lasr_person_following)/launch/joint_leg_tracker.launch">
    <arg name="forest_file" value="$(find leg_tracker)/config/trained_leg_detector_res=0.33.yaml" />
    <arg name="scan_topic" value="/scan" />
    <arg name="fixed_frame" value="odom"/>
    <arg name="scan_frequency" value="15"/>
    <arg name="max_detect_distance" value="7.5"/>
 </include> 

 <node pkg="lasr_person_following" type="person_following.py" name="person_following" output="screen" />

</launch>

